{
    "buildCommand": "prisma generate && next build",
    "devCommand": "next dev",
    "installCommand": "npm install --legacy-peer-deps",
    "framework": "nextjs",
    "outputDirectory": ".next",
    "env": {
        "NODE_VERSION": "20"
    },
    "build": {
        "env": {
            "PRISMA_GENERATE_SKIP_AUTOINSTALL": "false"
        }
    },
    "functions": {
        "app/api/**/*.ts": {
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ]
}